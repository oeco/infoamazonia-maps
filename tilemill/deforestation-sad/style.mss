Map {
  background-color: #b8dee6;
}

.deforestation_alerts {
  line-color: #2e7499;
  line-width: 1;
  [year=2007] {polygon-fill:white;}
  [year=2008] {polygon-fill:yellow;}
  [year=2009] {polygon-fill:orange;} 
  [year=2010] {polygon-fill:red;} 
  [year=2011] {polygon-fill:pink;}  
  [year=2012] {polygon-fill:purple;}
  [year=2013] {polygon-fill:brown;} 

}
